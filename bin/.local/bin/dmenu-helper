#!/usr/bin/env python3
import sys
import shlex
import re

from glob import glob
from os.path import join
from xdg.DesktopEntry import DesktopEntry
from xdg.BaseDirectory import xdg_data_dirs
from subprocess import Popen, check_output
from urllib.parse import quote_plus


APP_DIRS = [join(xdir, "applications") for xdir in xdg_data_dirs]
SEARCH_URL = "http://ddg.gg?q=%s"


def dtuple(app_file):
    d = DesktopEntry(app_file)
    return d.getName(), d.getExec()


def get_apps(dirs):
    apps = dict()
    for d in reversed(dirs):
        app_files = glob(join(d, "*.desktop"))
        apps.update(dict(dtuple(af) for af in app_files))
    return apps


def parse(line):
    if line == "":
        return []
    if line[0] == "$":
        return shlex.split(line[1:])
    elif line[0] == "!":
        query = line[1:].strip()
        return ["xdg-open", SEARCH_URL % quote_plus(query)]
    elif re.match(r"^https?://", line):
        return ["xdg-open", line]
    else:
        apps = get_apps(APP_DIRS)
        exe = apps.get(line)
        if exe is not None:
            sane = re.sub(r"%.", "", exe)
            return shlex.split(sane)
        else:
            return None


def launcher_list():
    apps = get_apps(APP_DIRS)
    return "\n".join(sorted(apps))


def launcher_exec(line):
    args = parse(line.strip())
    if args:
        Popen(args)
    else:
        sys.exit(1)


def launcher_run(args):
    apps = launcher_list()
    _out = check_output(["dmenu"] + args, input=apps, universal_newlines=True)
    launcher_exec(_out)


if __name__ == "__main__":
    if len(sys.argv) > 1 and sys.argv[1] == "list":
        print(launcher_list())
    elif len(sys.argv) > 1 and sys.argv[1] == "exec":
        for line in sys.stdin:
            launcher_exec(line)
    else:
        launcher_run(["-i"])
